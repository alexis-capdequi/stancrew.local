{% extends app.request.XmlHttpRequest ? 'app/base_ajax.html.twig' : 'app/base.html.twig' %}

{% block data_container %}
    <div class="grid" data-masonry='{ "itemSelector": ".grid-item", "columnWidth": 200 }'>
        {% for picture in pictures %}
            <div class="grid-item">
                <img src="{{ vich_uploader_asset(picture, 'image') }}" />
            </div>
        {% endfor %}
    </div>
{% endblock %}