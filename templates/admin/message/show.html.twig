<!DOCTYPE html>

<title>Message</title>

{% block body %}
    <h1>Message</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Object</th>
                <td>{{ message.object }}</td>
            </tr>
            <tr>
                <th>Sender</th>
                <td>{{ message.sender }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ message.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ message.content }}</td>
            </tr>
            <tr>
                <th>SendingDate</th>
                <td>{{ message.sendingDate ? message.sendingDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_message_index') }}">back to list</a>

    <a href="{{ path('admin_message_edit', {'id': message.id}) }}">edit</a>

    {{ include('admin/message/_delete_form.html.twig') }}
{% endblock %}
