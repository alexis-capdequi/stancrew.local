<!DOCTYPE html>

<title>Picture index</title>

{% block body %}
    <h1>Picture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Uniqid</th>
                <th>File</th>
                <th>PublicationDate</th>
                <th>Comment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for picture in pictures %}
            <tr>
                <td>{{ picture.id }}</td>
                <td>{{ picture.uniqid }}</td>
                <td>{{ picture.file }}</td>
                <td>{{ picture.publicationDate ? picture.publicationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ picture.comment }}</td>
                <td>
                    <a href="{{ path('admin_picture_show', {'id': picture.id}) }}">show</a>
                    <a href="{{ path('admin_picture_edit', {'id': picture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_picture_new') }}">Create new</a>
{% endblock %}
